<!DOCTYPE html>
<html>
	<head>
		{{>header}}
	</head>
	<body style="overflow: hidden">
		<nav>{{>navbar}}</nav>
		<h1>{{ title }}</h1>

		<form method="post" role="form" action="/deleteuser">
			<div>
				<div class="input-group mb-3">
					<span for="name" id="name" class="input-group-text">Select Item</span>
					<select class="form-select" id="user" name="user">
						<option selected>Select</option>
						{{#users}}
						<option name="{{ user }}" value="{{ user }}">
							{{ user }}
						</option>
						{{/users}}
					</select>
				</div>
				<div class="col-sm-10">
					<input type="submit" value="Delete" class="btn btn-danger" />
				</div>
			</div>
		</form>

		{{^users}}
		No items
		{{/users}}
	</body>
</html>
